{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chrome shadow",
  "version": "1.0.0",
  "identifier": "com.shadow.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "shadow",
        "width": 900,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEyOUVFRDBDMURFQTcyODgKUldTSWN1b2RETzJlRWlubVRqZWJ6M2JqZTJsWnVhdWRzWHJGeFBQRzBTanhnMklnSGVVM1ZLOEYK",
      "endpoints": [
        "https://github.com/BrowTo/ChromeShadow/releases/latest/download/latest.json"
      ]
    },
    "sql": {
      "preload": [
        "sqlite:shadow.db"
      ]
    }
  }
}