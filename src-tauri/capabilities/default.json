{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "platforms": [
    "windows",
    "macOS"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "os:default",
    "shell:default",
    "store:default",
    "sql:default",
    "sql:allow-execute",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "core:window:allow-destroy"
    },
    "process:default",
    "window-state:default"
  ]
}